<div class="container p4">
    <div class="row">
        <div class="col-lg-12">
            <div class="page-header">
                <h1 id="tables" class="my-4 text-center">Asistencia</h1>
                <input type="text" value="{{this.starting}}" name="management-rules-starting"/><br/>
                <a href="/cargos/add" class="btn btn-success m-1">Crear Cargo</a>
            </div>
            <div class="card">
                <div class="card-body">
                    <form action="/cargos/add" method="POST">
                        <div class="form-group">
                            <select class="form-control" name="id_unidad" placeholder="Unidades">
                                {{#each biometrico}}
                                <option value="{{id_unidad}}"> {{nombre_unidad}} </option>
                                {{/each}}
                            </select>
                        </div>
                        <table class="table table-hover cellspacing=" 0" width="100%"">
                            <thead>
                                <tr>
                                    <th scope="col">Nombre</th>
                                    <th scope="col">Fecha</th>
                                    <th scope="col">Hora</th>
                                    <th scope="col">observacion</th>
                                    <th scope="col">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each biometrico}}
                                <tr>
                                    <td> {{nombre}} </td>
                                    <td> {{moment fecha format= "DD/MM/YY" }} </td>
                                    <td> {{hora}} </td>
                                    <td> {{observacion}} </td>
                                    <td>
                                        <a href="/cargos/delete/{{id_cargo}}" class="btn btn-danger mr-1"><i class="far fa-trash-alt"></i></a>
                                        <a href="/cargos/edit/{{id_cargo}}" class="btn btn-warning mr-1"><i class="fas fa-edit"></i></a>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $('input[name=management-rules-starting]').datepicker();
    $('input[name=management-rules-starting]').datepicker("option", "dateFormat", "yy-mm-dd");
</script>