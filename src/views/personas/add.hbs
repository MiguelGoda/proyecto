<div class="container p-4">
    <div class="row">
        <div class="col-md-6 mx-auto text-center">
            <div class="card">
                <h4 class="p-4">Agregar PERSONAS</h4>
                <div class="card-body">
                    <form action="/personas/add" method="POST">
                        <div class="form-group">
                            <input type="text" name="ap_paterno" class="form-control" placeholder="Apellido Paterno"
                                autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" name="ap_materno" class="form-control" placeholder="Apellido Materno">
                        </div>
                        <div class="form-group">
                            <input type="text" name="nombres" class="form-control" placeholder="Nombres">
                        </div>
                        <div class="form-group">
                            <input placeholder="Fecha de Nacimiento" name="fecha_nacimiento" class="form-control"
                                type="text" onfocus="(this.type='date')" id="date">
                        </div>
                        <div class="form-group">
                            <input type="text" name="provincia" class="form-control" placeholder="Provincia">
                        </div>
                        <div class="form-group">
                            <input type="text" name="departamento" class="form-control" placeholder="Departamento">
                        </div>
                        <div class="form-group">
                            <input type="text" name="CI" class="form-control" placeholder="cedula">
                        </div>
                        <div class="form-group">
                            <input type="number" name="celular" class="form-control" placeholder="Celular">
                        </div>
                        <div class="form-group">
                            <input type="text" name="estado_civil" class="form-control" placeholder="Estado Civil">
                        </div>
                        <div class="form-group">
                            <input type="text" name="domicilio" class="form-control" placeholder="Domicilio">
                        </div>
                        <div class="form-group">
                            <div class="custom-control custom-radio">
                                <input type="radio" value="hombre" id="customRadio1" name="sexo"
                                    class="custom-control-input" checked="">
                                <label class="custom-control-label" for="customRadio1">Hombre</label>
                            </div>
                            <div class="custom-control custom-radio">
                                <input type="radio" value="mujer" id="customRadio2" name="sexo"
                                    class="custom-control-input">
                                <label class="custom-control-label" for="customRadio2">Mujer
                                </label>
                            </div>
                        </div>

                        <div class="form-group">
                            <button class="btn btn-success btn-block" aria-pressed="true" autocomplete="off">
                                Guardar
                            </button>
                            <button href="/personas" class="btn btn-secondary btn-block" data-toggle="button"
                                aria-pressed="true">
                                Cancelar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>