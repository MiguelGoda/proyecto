<div class="container p4">
    <div class="row">
        <div class="col-lg-12">
            <div class="page-header">
                <h1 id="tables" class="my-4 text-center">Personal</h1>
            </div>
            <table class="table table-hover table-bordered">
                <thead>
                    <tr>
                        <th scope="col">Paterno</th>
                        <th scope="col">Materno</th>
                        <th scope="col">Nombres</th>
                        <th scope="col">Fecha Nacimiento</th>
                        <th scope="col">Provincia</th>
                        <th scope="col">Dpto</th>
                        <th scope="col">CI</th>
                        <th scope="col">Celular</th>
                        <th scope="col">Estado Civil</th>
                        <th scope="col">Domicilio</th>
                        <th scope="col">Sexo</th>
                        <th scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each personal}}
                    <tr>
                        <td> {{ap_paterno}} </td>
                        <td> {{ap_materno}} </td>
                        <td> {{nombres}} </td>
                        <td> {{fecha_nacimiento}} </td>
                        <td> {{provincia}} </td>
                        <td> {{departamento}} </td>
                        <td> {{CI}} </td>
                        <td> {{celular}} </td>
                        <td> {{estado_civil}} </td>
                        <td> {{domicilio}} </td>
                        <td> {{sexo}} </td>
                        <td>
                            <a href="/direcciones/delete/{{id_direccion}}" class="btn btn-danger mr-1">Eliminar</a>
                            <a href="/direcciones/edit/{{id_direccion}}" class="btn btn-secondary mr-1">Editar</a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>