<div class="container p4">
    <div class="row">
        <div class="col-lg-12">
            <div class="page-header">
                <h1 id="tables" class="my-4 text-center">Memos</h1>
            </div>
            <div class="card">
                <div class="card-body">
                    <form action="/unidades/add" method="POST">
                        <div class="form-group">
                            <select class="form-control" name="direccion_id_direccion" placeholder="Direcciones">
                                {{#each memos}}
                                <option value="{{tipo_memo_id_tipo_memo}}"> {{tipo_memo}} </option>
                                {{/each}}
                            </select>
                        </div>
                        <table class="table table-hover table-bordered">
                            <thead>
                                <tr>
                                    <th scope="col">Nro</th>
                                    <th scope="col">Descripcion</th>
                                    <th scope="col">Fecha</th>
                                    <th scope="col">Tipo</th>
                                    <th scope="col">Nombre</th>
                                    <th scope="col">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each memos}}
                                <tr>
                                    <td> {{nro_memo}} </td>
                                    <td> {{descripcion_memo}} </td>
                                    <td> {{fecha_memo}} </td>
                                    <td> {{tipo_memo}} </td>
                                    <td> {{nombre_completo}} </td>
                                    <td>
                                        <a href="/memos/delete/{{id_memos}}" class="btn btn-danger mr-1">Eliminar</a>
                                        <a href="/memos/edit/{{id_memos}}" class="btn btn-secondary mr-1">Editar</a>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>