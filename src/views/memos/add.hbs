<div class="container p-4">
    <div class="row">
        <div class="col-md-6 mx-auto text-center">
            <div class="card">
                <h4 class="p-4">Agregar Memo</h4>
                <div class="card-body">
                    <form action="/memos/add" method="POST">
                        <div class="form-group">
                            <select class="form-control" name="tipo_memo_id_tipo_memo" placeholder="Tipo Memos">
                                {{#each tipo_memos}}
                                <option value="{{tipo_memo_id_tipo_memo}}"> {{tipo_memo}} </option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="form-group">
                            <select class="form-control" name="persona_id_persona" placeholder="nombres">
                                {{#each persona}}
                                <option value="{{persona_id_persona}}"> {{nombre_completo}} </option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="form-group">
                            <input type="text" name="nro_memo" class="form-control" placeholder="Nro Memo" autofocus>
                        </div>
                        <div class="form-group">
                            <textarea name="descripcion_memo" rows="2" class="form-control"
                                placeholder="Descripcion"></textarea>
                        </div>
                        <div class="form-group">
                            <input type="date" name="fecha_memo" class="form-control" placeholder="Fecha Memo">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block" aria-pressed="true" autocomplete="off">
                                Guardar
                            </button>
                            <button href="" class="btn btn-secondary btn-block" data-toggle="button" aria-pressed="true"
                                autocomplete="off">
                                Cancelar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>