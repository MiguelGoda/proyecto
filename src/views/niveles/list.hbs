<div class="container p4">
    <div class="row">
        <div class="col-lg-12">
            <div class="page-header">
                <h1 id="tables" class="my-4 text-center">Niveles</h1>
            </div>
            <table class="table table-hover table-bordered">
                <thead>
                    <tr>
                        <th scope="col">Nivel</th>
                        <th scope="col">Haber Basico</th>
                        <th scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each niveles}}
                    <tr>
                        <td> {{nombre_nivel}} </td>
                        <td> {{haber_basico}} </td>
                        <td>
                            <a href="/niveles/delete/{{id_niveles}}" class="btn btn-danger mr-1">Eliminar</a>
                            <a href="/niveles/edit/{{id_niveles}}" class="btn btn-secondary mr-1">Editar</a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>