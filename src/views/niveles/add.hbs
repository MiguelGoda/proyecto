<div class="container p-4">
    <div class="row">
        <div class="col-md-6 mx-auto text-center">
            <div class="card">
                <h4 class="p-4">Agregar Niveles</h4>
                <div class="card-body">
                    <form action="/niveles/add" method="POST">
                        <div class="form-group">
                            <input type="text" name="nombre_nivel" class="form-control" placeholder="Nombre Nivel"
                                autofocus>
                        </div>
                        <div class="form-group">
                            <input type="number" name="haber_basico" class="form-control" placeholder="Haber Basico">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block" aria-pressed="true" autocomplete="off">
                                Guardar
                            </button>
                            <button href="/niveles" class="btn btn-secondary btn-block" data-toggle="button"
                                aria-pressed="true" autocomplete="off">
                                Cancelar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>