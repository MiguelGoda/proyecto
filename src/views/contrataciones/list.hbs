<div class="container p4">
    <div class="row">
        <div class="col-lg-12">
            <div class="page-header">
                <h1 id="tables" class="my-4 text-center">Cargos</h1>
                <a href="/requisitos/add" class="btn btn-success m-1">Crear Cargo</a>
            </div>
            <div class="card">
                <div class="card-body">
                    <form action="/requisitos/add" method="POST">
                        <div class="form-group">
                            <select class="form-control" name="id_persona" placeholder="Direcciones">
                                {{#each contrataciones}}
                                <option value="{{id_persona}}"> {{nombre_completo}} </option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="table-responsive-sm">
                            <table class="table table-hover cellspacing="0" width="100%"">
                                <thead>
                                    <tr>
                                        <th scope="col">Personal</th>
                                        <th scope="col">PIN</th>
                                        <th scope="col">Rtos</th>
                                        <th scope="col">Nivel</th>
                                        <th scope="col">Cargo</th>
                                        <th scope="col">Horario</th>
                                        <th scope="col">Fecha Ingreso</th>
                                        {{#if fecha_retiro}}
                                        <th scope="col">Fecha Retiro</th>
                                        <th scope="col">Motivo Retiro</th>
                                        {{else}}
                                        {{/if}}
                                        <th scope="col">Activo</th>
                                        <th scope="col">Acciones</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each contrataciones}}
                                    <tr>
                                        <td> {{nombre_completo}} </td>
                                        <td> {{PIN}} </td>
                                        {{#if id_requisito}}
                                        <td>
                                            <a href="/requisitos">si</a>
                                        </td>
                                        {{else}}
                                        <td>no</td>
                                        {{/if}}
                                        <td> {{nombre_nivel}} </td>
                                        <td> {{nombre_cargo}} </td>
                                        <td> {{nombre_horario}} </td>
                                        <td> {{moment fecha_ingreso format= "DD/MM/YYYY"}} </td>
                                        {{#if fecha_retiro }}
                                        <td> {{moment fecha_retiro format= "DD/MM/YYYY"}} </td>
                                        <td> {{motivo_retiro}} </td>
                                        {{else}}
                                        {{/if}}
                                        {{#if activo}}
                                        <td>si</td>
                                        {{else}}
                                        <td>no</td>
                                        {{/if}}
                                        <td style="display: flex">
                                            <a href="/unidades/delete/{{id_unidad}}"
                                                class="btn btn-danger mr-1"><i
                                                    class="far fa-trash-alt"></i></a>
                                            <a href="/unidades/edit/{{id_unidad}}" class="btn btn-warning mr-1"><i class="fas fa-edit"></i></a>
                                        </td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>