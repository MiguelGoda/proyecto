<div class="container p-4">
    <div class="row">
        <div class="col-md-6 mx-auto text-center">
            <div class="card">
                <h4 class="p-4">Agregar Direccion</h4>
                <div class="card-body">
                    <form action="/direcciones/add" method="POST">
                        <div class="form-group">
                            <input type="text" name="nombre_direccion" class="form-control"
                                placeholder="Nombre Direccion" autofocus>
                        </div>
                        <div class="form-group">
                            <textarea name="descripcion_direccion" rows="2" class="form-control"
                                placeholder="Descripcion"></textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block" aria-pressed="true" autocomplete="off">
                                Guardar
                            </button>
                            <a href="/direcciones" class="btn btn-secondary btn-block" aria-pressed="true">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>