<div class="container p4">
    <div class="row">
        <div class="col-lg-12">
            <div class="page-header">
                <h1 id="tables" class="my-4 text-center">Cargos</h1>
                <a href="/cargos/add" class="btn btn-success m-1">Crear Cargo</a>
            </div>
            <div class="card">
                <div class="card-body">
                    <form action="/cargos/add" method="POST">
                        <div class="form-group">
                            <select class="form-control" name="id_unidad" placeholder="Unidades">
                                {{#each unidades}}
                                <option value="{{id_unidad}}"> {{nombre_unidad}} </option>
                                {{/each}}
                            </select>
                        </div>
                        <table class="table table-hover table-bordered">
                            <thead>
                                <tr>
                                    <th scope="col">cargo</th>
                                    <th scope="col">Descripcion</th>
                                    <th scope="col">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each cargos}}
                                <tr>
                                    <td> {{nombre_cargo}} </td>
                                    <td> {{descripcion}} </td>
                                    <td>
                                        <a href="/cargos/delete/{{id_cargo}}" class="btn btn-danger mr-1">Eliminar</a>
                                        <a href="/cargos/edit/{{id_cargo}}" class="btn btn-secondary mr-1">Editar</a>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>