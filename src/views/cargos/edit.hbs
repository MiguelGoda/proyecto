<div class="container p-4">
    <div class="row">
        <div class="col-md-6 mx-auto text-center">
            <div class="card">
                <h4 class="p-4">Editar Cargo</h4>
                <div class="card-body">
                    <form action="/cargos/edit/{{cargos.id_cargo}}" method="POST">
                        <div class="form-group">
                            <select class="form-control" name="id_unidad" placeholder="Direcciones">
                                {{#each unidades}}
                                <option value="{{id_unidad}}"> {{nombre_unidad}} </option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="form-group">
                            <input type="text" value="{{cargos.nombre_cargo}}" name="nombre_cargo" class="form-control"
                                placeholder="Nombre Cargo" autofocus>
                        </div>
                        <div class="form-group">
                            <textarea name="descripcion" rows="2" class="form-control"
                                placeholder="Descripcion">{{cargos.descripcion}}</textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block" aria-pressed="true" autocomplete="off">
                                Guardar
                            </button>
                            <a href="/cargos" class="btn btn-secondary btn-block" aria-pressed="true">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>