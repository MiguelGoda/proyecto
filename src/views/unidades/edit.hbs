<div class="container p-4">
    <div class="row">
        <div class="col-md-6 mx-auto text-center">
            <div class="card">
                <h4 class="p-4">Editar Unidades</h4>
                <div class="card-body">
                    <form action="/unidades/edit/{{unidades.id_unidad}} " method="POST">
                        <div class="form-group">
                            <select class="form-control" name="id_direccion" placeholder="Direcciones">
                                {{#each direcciones}}
                                <option value="{{id_direccion}}">
                                    {{nombre_direccion}}
                                </option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="form-group">
                            <input type="text" value="{{unidades.nombre_unidad}}" name="nombre_unidad"
                                class="form-control" placeholder="Nombre Unidad" autofocus>
                        </div>
                        <div class="form-group">
                            <textarea name="descripcion" rows="2" class="form-control"
                                placeholder="Descripcion"> {{unidades.descripcion}} </textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block" aria-pressed="true" autocomplete="off">
                                Guardar
                            </button>
                            <a href="/unidades" class="btn btn-secondary btn-block" aria-pressed="true">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>