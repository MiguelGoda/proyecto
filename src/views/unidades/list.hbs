<div class="container p4">
    <div class="row">
        <div class="col-lg-12">
            <div class="page-header">
                <h1 id="tables" class="my-4 text-center">Unidades</h1>
                <a href="/unidades/add" class="btn btn-success m-1">Crear unidad</a>
            </div>
            <div class="card">
                <div class="card-body">
                    <form action="/unidades/add" method="POST">
                        <div class="form-group">
                            <select class="form-control" name="direccion_id_direccion" placeholder="Direcciones">
                                {{#each unidades}}
                                <option value="{{direccion_id_direccion}}"> {{nombre_direccion}} </option>
                                {{/each}}
                            </select>
                        </div>
                        <table class="table table-hover table-bordered">
                            <thead>
                                <tr>

                                    <th scope="col">unidad</th>
                                    <th scope="col">Descripcion</th>
                                    <th scope="col">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each unidades}}
                                <tr>

                                    <td> {{nombre_unidad}} </td>
                                    <td> {{descripcion}} </td>
                                    <td>
                                        <a href="/unidades/delete/{{id_unidad}}"
                                            class="btn btn-danger mr-1">Eliminar</a>
                                        <a href="/unidades/edit/{{id_unidad}}" class="btn btn-secondary mr-1">Editar</a>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>