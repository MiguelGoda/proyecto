<div class="container p4">
    <div class="row">
        <div class="col-lg-12">
            <div class="page-header">
                <h1 id="tables" class="my-4 text-center">Requisitos</h1>
                <a href="/requisitos/add" class="btn btn-success m-1">Crear Requisitos</a>
            </div>
            <div class="card">
                <div class="card-body">
                    <form action="/requisitos/add" method="POST">
                        <div class="form-group">
                            <select class="form-control" name="id_persona" placeholder="Direcciones">
                                {{#each requisitos}}
                                <option value="{{id_persona}}"> {{nombre_completo}} </option>
                                {{/each}}
                            </select>
                        </div>
                        <table class="table table-hover cellspacing=" 0" width="100%"">
                            <thead>
                                <tr>
                                    <th scope="col">Personal</th>
                                    <th scope="col">C.V.</th>
                                    <th scope="col">Decla.</th>
                                    <th scope="col">F. Decla.</th>
                                    <th scope="col">Incomp.</th>
                                    <th scope="col">Antec.</th>
                                    <th scope="col">Libreta Militar</th>
                                    <th scope="col">Patron</th>
                                    <th scope="col">Seguro</th>
                                    <th scope="col">SIPPASE</th>
                                    <th scope="col">AFP</th>
                                    <th scope="col">Idioma nativo</th>
                                    <th scope="col">Acciones</th>

                                </tr>
                            </thead>
                            <tbody>
                                {{#each requisitos}}
                                <tr>
                                    <td> {{nombre_completo}} </td>
                                    <td> {{curriculum}} </td>
                                    <td> {{declaracion_jurada}} </td>
                                    <td> {{moment fecha_declaracion format= "DD/MM/YYYY"}} </td>
                                    <td> {{incompatibilidad}} </td>
                                    <td> {{certificado_antecedentes}} </td>
                                    <td> {{libreta_militar}} </td>
                                    <td> {{patron_biometrico}} </td>
                                    <td> {{seguro_salud}} </td>
                                    <td> {{sippase}} </td>
                                    <td> {{afp}} </td>
                                    <td> {{idioma_nativo}} </td>
                                    <td style="display: flex">
                                        <a href="/unidades/delete/{{id_unidad}}"
                                            class="btn btn-danger mr-1"><i
                                                class="far fa-trash-alt"></i></a>
                                        <a href="/unidades/edit/{{id_unidad}}" class="btn btn-warning mr-1"><i class="fas fa-edit"></i></a>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>