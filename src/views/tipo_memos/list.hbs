<div class="container p4">
    <div class="row">
        <div class="col-lg-12">
            <div class="page-header">
                <h1 id="tables" class="my-4 text-center">Tipos Memos</h1>
            </div>
            <table class="table table-hover table-bordered">
                <thead>
                    <tr>
                        <th scope="col">Tipos Memos</th>
                        <th scope="col">Descripcion</th>
                        <th scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each tipo_memo}}
                    <tr>
                        <td> {{tipo_memo}} </td>
                        <td> {{descripcion}} </td>
                        <td>
                            <a href="/tipo_memos/delete/{{id_tipo_memo}}" class="btn btn-danger mr-1">Eliminar</a>
                            <a href="/tipo_memos/edit/{{id_tipo_memo}}" class="btn btn-secondary mr-1">Editar</a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>