<div class="container p-4">
    <div class="row">
        <div class="col-md-6 mx-auto text-center">
            <div class="card">
                <h4 class="p-4">Agregar Tipo Memo</h4>
                <div class="card-body">
                    <form action="/tipo_memos/add" method="POST">
                        <div class="form-group">
                            <input type="text" name="tipo_memo" class="form-control" placeholder="Nombre memo"
                                autofocus>
                        </div>
                        <div class="form-group">
                            <textarea name="descripcion" rows="2" class="form-control"
                                placeholder="Descripcion"></textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block" aria-pressed="true" autocomplete="off">
                                Guardar
                            </button>
                            <button href="/tipo_memo/add" class="btn btn-secondary btn-block" data-toggle="button"
                                aria-pressed="true" autocomplete="off">
                                Cancelar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>