<div class="container p-4">
    <div class="row">
        <div class="col-md-6 mx-auto text-center">
            <div class="card">
                <h4 class="p-4">Editar Tipo Memo</h4>
                <div class="card-body">
                    <form action="/tipo_memos/edit/{{tipo_memos.id_tipo_memo}}" method="POST">
                        <div class="form-group">
                            <input type="text" value="{{tipo_memos.tipo_memo}}" name="tipo_memo" class="form-control"
                                placeholder="Nombre Tipo direccion" autofocus>
                        </div>
                        <div class="form-group">
                            <textarea name="descripcion" rows="2" class="form-control"
                                placeholder="Descripcion">{{tipo_memos.descripcion}}</textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block" aria-pressed="true" autocomplete="off">
                                Guardar
                            </button>
                            <button href="/cancelar" class="btn btn-secondary btn-block" aria-pressed="false"
                                autocomplete="off">
                                Cancelar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>